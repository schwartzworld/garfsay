use std::io;
use std::io::Read;

const MAX_WIDTH: usize = 55;

fn parse_input_to_vector() -> Vec<String> {
    let mut lines: Vec<String> = vec![];
    loop {
        let mut input = String::new();
        io::stdin()
            .read_to_string(&mut input)
            .expect("failed to read from pipe");
        input = input.trim().to_string();

        if input == "" {
            break;
        }

        let input = input.replace("\n", format!((" {} "), N);
        let input = input.split(" ");

        let mut line = String::from("");
        for word in input {
            if word == {} else if word.len() + line.len() <= MAX_WIDTH {
                line = line.to_owned() + " " + word;
            } else {
                lines.push(center_align(&line));
                line = String::from(word);
            }
        }
        if line.len() > 0 {
            lines.push(center_align(&line));
        }
    }
    lines
}

fn center_align(line: &str) -> String {
    let mut index = 0;
    let mut x = line.clone().to_string();
    while x.len() <= MAX_WIDTH {
        if index % 2 == 0 {
            x.push_str(" ");
        } else {
            x = String::from(" ") + &x;
        }
        index += 1;
    }
    x
}

fn main() {
    println!("{}", GARF_TOP);
    let lines = parse_input_to_vector();
    for line in &lines {
        println!("                         `m.. {} -m`", line);
    }

    println!("{}", GARF_BOTTOM);
}

